@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

    <div class="col-lg-12">
        <div class="card">
        <div class="card-header">
            <br />
            <h1 class="card-title">Hakkımızda Listesi</h1>
        </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Resim</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th>@count</th>
                                    <td><img src="@item.ImageUrl" style="width:200px; height:200px" /></td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a href="/AdminAbout/DeleteAbout/@item.AboutId" class="btn btn-outline-danger btn-lg"> <i class="fa fa-trash"></i> Sil</a>
                                        <a href="/AdminAbout/UpdateAbout/@item.AboutId" class="btn btn-outline-success btn-lg"><i class="fa fa-edit"></i> Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/AdminAbout/CreateAbout" class="btn btn-outline-primary"> <i class="fa fa-pencil"></i> Yeni Hakkımızda Ekle</a>
                </div>
            </div>
        </div>
    </div>


