<!-- Hero Start -->
@model List<ResultFeatureDto>
@foreach (var item in Model)
{
    <div class="container-fluid bg-light py-6 my-6 mt-0">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-7 col-md-12">
                <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-4 animated bounceInDown">Catering Services Hoşgeldiniz</small>
                <h1 class="display-1 mb-4 animated bounceInDown">@item.Title</h1>
                <a href="/Booking/Index" class="btn btn-primary border-0 rounded-pill py-3 px-4 px-md-5 me-4 animated bounceInLeft">Rezervasyon Oluştur</a>
            </div>
            <div class="col-lg-5 col-md-12">
                    <img src="@item.ImageUrl" class="img-fluid rounded animated zoomIn" alt="">
            </div>
        </div>
    </div>
</div>
}

<!-- Hero End -->
