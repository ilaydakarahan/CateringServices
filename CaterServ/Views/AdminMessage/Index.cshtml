@model List<ResultMessageDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Hakkımızda Listesi</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-muted table-responsive-sm">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Ad Soyad</td>
                            <td>İçerik</td>
                            <td>Email</td>
                            <td>İşlemler</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.NameSurname</td>
                                <td>@(item.Description.Length >= 30 ? item.Description.Substring(0, 30) : item.Description)</td>
                                <td>
                                    <a href="/AdminMessage/DeleteMessage/@item.MessageId" class="btn btn-outline-danger btn-lg"> <i class="fa fa-trash"></i> Sil</a>
                                    <a href="/AdminMessage/DetailMessage/@item.MessageId" class="btn btn-outline-success btn-lg"><i class="fa fa-search"></i> Detay</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


