@model UpdateCheffDto
@{
    ViewData["Title"] = "UpdateCheff";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <br />
                <h1> Şef Bilgisi Güncelleme Sayfası </h1>
            </div>
            <div class="card-body">
                <div class="basic-form text-muted">
                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="CheffId" />
                        <label>Ünvan</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />
                        <label>Ad Soyad</label>
                        <input type="text" class="form-control" asp-for="CheffName" />
                        <br />
                        <label>Resim Ekleyin</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <button class="btn btn-outline-primary"><i class="fa fa-edit"></i> Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

