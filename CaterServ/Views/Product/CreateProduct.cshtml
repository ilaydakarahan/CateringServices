@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
}

<<h3>Yeni Ürün Oluşturma Sayfası</h3>

<form method="post">
    <label>Resim</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductName" class="form-control" />
    <br />
    <label>Ürün Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <label>Ürün Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <lable>Ürün Kategori</lable>
    <select asp-for="CategoryName" asp-items="@ViewBag.category" class="form-control">
        <option>Kategori Seçin</option>
    </select>
    <br />
    <button class="btn btn-primary">Ürünü Kaydet</button>

</form>

