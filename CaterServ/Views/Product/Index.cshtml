@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}


<h3>Ürünler</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ürün Adı</th>
        <th>Ürün Açıklaması</th>
        <th>Ürün Fiyatı</th>
        <th>Ürün Kategorisi</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:75px ; width:75px" /></td>
            <td>@item.ProductName</td>
            <td>@item.Description</td>
            <td>@item.Price ₺</td>
            <td>@item.CategoryName</td>
            

            <td> 
                <a class="btn btn-danger" href="/Product/DeleteProduct/@item.ProductId">Sil</a>
                <a class="btn btn-info" href="/Product/UpdateProduct/@item.ProductId">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Product/CreateProduct">Yeni Ürün Ekle</a>

