@model UpdateStatisticDto
@{
    ViewData["Title"] = "UpdateStatistic";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <br />
                <br />
                <h2>İstatistik Güncelleme Sayfası</h2>
            </div>
            <div class="card-body">
                <div class="basic-form text-muted">
                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="StatisticId" />
                        <label>1.Özellik İkonu</label>
                        <input type="text" class="form-control" asp-for="Icon1" />
                        <br />
                        <label>1.Özellik Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title1" />
                        <br />
                        <label>1.Özellik Değeri</label>
                        <input type="text" class="form-control" asp-for="Amount1" />
                        <br />
                        <label>2.Özellik İkonu</label>
                        <input type="text" class="form-control" asp-for="Icon2" />
                        <br />
                        <label>2.Özellik Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title2" />
                        <br />
                        <label>2.Özellik Değeri</label>
                        <input type="text" class="form-control" asp-for="Amount2" />
                        <br />
                        <label>3.Özellik İkonu</label>
                        <input type="text" class="form-control" asp-for="Icon3" />
                        <br />
                        <label>3.Özellik Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title3" />
                        <br />
                        <label>3.Özellik Değeri</label>
                        <input type="text" class="form-control" asp-for="Amount3" />
                        <br />
                        <button class="btn btn-outline-primary"> Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

