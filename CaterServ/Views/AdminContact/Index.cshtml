@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <br />
            <h1 class="card-title">İletişim Bilgileri</h1>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Adres</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Adress</td>
                                <td>@item.MailUs</td>
                                <td>@item.Phone</td>
                                <td>
                                    <a href="/AdminContact/DeleteContact/@item.ContactId" class="btn btn-outline-danger btn-lg"> <i class="fa fa-trash"></i> Sil</a>
                                    <a href="/AdminContact/UpdateContact/@item.ContactId" class="btn btn-outline-success btn-lg"><i class="fa fa-edit"></i> Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/AdminContact/CreateContact" class="btn btn-outline-primary"> Yeni İletişim Bilgisi Ekle</a>
            </div>
        </div>
    </div>
</div>


