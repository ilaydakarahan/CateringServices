@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <br />
                <h1> İletişim Bilgisi Güncelleme Sayfası </h1>
            </div>
            <div class="card-body">
                <div class="basic-form text-muted">
                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="ContactId" />
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="MailUs" />
                        <br />
                        <label>Telefon</label>
                        <input type="text" class="form-control" asp-for="Phone" />
                        <br />
                        <label>Adres</label>
                        <input type="text" class="form-control" asp-for="Adress" />
                        <br />
                        <button class="btn btn-outline-primary"><i class="fa fa-edit"></i> Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

